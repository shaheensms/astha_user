<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="6dp"
    android:layout_marginTop="2dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="402dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rProductName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:text="Walton"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rProductModel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="model "
                    android:textSize="13sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rProductWarranty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Warranty: "
                    android:textSize="13sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <TextView
                android:id="@+id/rProductBuyerTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="Buyer Name:"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rProductPurchageDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="5dp"
                android:text="purchase Date:"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rShopNameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="shopName:"
                        android:textSize=".1sp" />

                    <TextView
                        android:id="@+id/r_imageurl_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.5sp"
                        android:textSize="0.1sp" />

                    <TextView
                        android:id="@+id/r_price_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.5sp"
                        android:textSize="0.1sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/r_shopnum_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01555"
                        android:textSize=".1sp" />

                    <TextView
                        android:id="@+id/r_quid_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qr"
                        android:textSize="0.1sp" />

                    <TextView
                        android:id="@+id/r_comment_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="comment"
                        android:textSize="0.1sp" />

                    <TextView
                        android:id="@+id/r_Adress_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="comment"
                        android:textSize="0.1sp" />

                    <TextView
                        android:id="@+id/r_ShopMail_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="0.1sp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>




</android.support.v7.widget.CardView>
